<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#b3747474" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:bottom="1.5dp" android:right="1.5dp">
                <shape>
                    <solid android:color="#ffa9afac" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#b3747474" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:bottom="1.5dp" android:right="1.5dp">
                <shape>
                    <solid android:color="#ffbebebe" />
                    <stroke android:width="1dp" android:color="#666666" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#b3747474" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:bottom="1.5dp" android:right="1.5dp">
                <shape>
                    <solid android:color="#fff6f6f6" />
                    <stroke android:width="1dp" android:color="#ffc6c6c6" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>